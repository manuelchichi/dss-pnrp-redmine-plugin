<h5>Alternativas</h5>

<form>
  <div class="pr-board box">
      <div class="rank-issues"> 
        <% @returned_solution.each do |issue| %>
          <div class="rank-column" >
            <div class="rank-column-issue">
              <%= link_to "#{'Issue ' + issue["issue_id"].to_s}", issue_path(issue["issue_id"])   %>
            </div>
            <div class="rank-column-position">
              Posicion <%= issue["position"] %>
            </div>
            <div class="rank-column-option">
              <select name="plan" id="plan">
                <option value="free">Free</option>
                <option value="starter" selected>Starter </option>
                <option value="professional">Professional</option>
                <option value="corporate">Corporate</option>
              </select>
            </div>
          </div>
        <% end %>
      </div>            
    <div class='buttons'>
      <input type="submit" value='Seleccionar'>
    </div>
  </div>
</form>

<% if false %>
<form>
  <div class="pr-board box">
    <% @alternatives.each do |alternative| %>
      <div class="alternative list">
        <div class="alternative-option"> 
          Ejecucion: <%= alternative[0] %> 
        </div>
        <div class="alternative-option"> 
          Estado: <%= alternative[1] %> 
        </div>
      </div>
      <div class="alternative list">
        <div class="alternative-option"> 
          <input type="radio" name="selectAlternative" value="alternative<%= alternative[1] %>">
          <label for="alternative<%= alternative[1] %>"> Alt <%= alternative[2] %> </label>
        </div>
        <div class="alternative-issues"> 
          <% alternative[3].each do |column| %>
          <div class ="issues-column"> 
            <div class="issue-column-priority">
              <%= column[:name] %>
            </div>

            <% column[:issues].each do |row| %>
              <div class="issue-column-subject">
                <%= row.subject %>
              </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
    <div class='buttons'>
      <input type="submit" value='Seleccionar'>
    </div>
  </div>

</form>
<% end %>

<% content_for :header_tags do %>
  <%= stylesheet_link_tag "tables", plugin: "dss_pnrp" %>
  <%= stylesheet_link_tag "bootstrap", plugin: "dss_pnrp" %>
<% end %>
  








