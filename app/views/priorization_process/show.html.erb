<h2>Ingenieria de requerimientos</h2>

<table>
<tr>
  <th> Proceso de Priorizacion </th>
<tr>
<tr>
    <th> id </th>
    <th> status </th>
    <th> start date </th>
    <th> updated date </th>
</tr>
      <tr>   
        <td align ="center">
         <%= @pp['id'] %>
        </td>
        <td align="center">
         <%= @pp['status'] %>
        </td>
        <td align="center">
         <%= @pp['created_on'] %>
        </td>
        <td align="center">
         <%= @pp['updated_on'] %>
        </td>
       </tr>

</table>

<hr>
<div class= "options">
  <%= link_to "Iniciar proceso", execute_priorization_process_path(@pp), :class=>"button" %> 
  <a href="#" class="button">Seleccionar tomadores de decision</a>
  <%= link_to "Seleccionar alternativas", alternatives_priorization_process_path(@pp), :class=>"button" %> 
  <a href="#" class="button">Ver progreso del proceso actual</a>
  <a href="#" class="button">Rechazar proceso actual</a>
  <a href="#" class="button">Replanificar </a>
</div>

<hr>

<table>
<tr>
  <th> Requerimientos del proceso de priorizaci√≥n </th>
<tr>
<tr>
    <th> id </th>
    <th> name </th>
    <th> status </th>
    <th> priority </th>
    <th> start date </th>
    <th> description </th>
</tr>
    <% @ppRIssues.each do |pr|%>
      <tr>   
        <td align="center">
        <%= link_to "#{'Issue#' + pr.issue['id'].to_s}", issue_path(pr.issue) %>
        </td>
        <td align="center">
         <%= pr.issue['subject'] %>
        </td>
        <td align="center">
         <%= pr.issue['status_id']%>
        </td>
        <td align="center">
         <%= pr.issue['priority_id']%>
        </td>
        <td align="center">
         <%= pr.issue['start_date'] %>
        </td>
        <td align="center">
         <%= pr.issue['description'] %>
        </td>
       </tr>
    <% end %>

</table>

<hr>

<table>
<tr>
  <th> Tomadores de decision </th>
<tr>
<tr>
    <th> id </th>
    <th> nombre </th>
    <th> apellido </th>
    <th> admin </th>
</tr>
    <% @PpDecisionMakers.each do |pdm|%>
      <tr>   
        <td align="center">
         <%=link_to "#{'User#' + pdm['user_id'].to_s}", user_path(pdm.user)  %>
        </td>
        <td align="center">
         <%= pdm.user['firstname'] %>
        </td>
        <td align="center">
        <%= pdm.user['lastname'] %>
       </td>
       <td align="center">
        <%= pdm['admin'] %>
       </td>
       </tr>
    <% end %>

</table>

<table>
<tr>
  <th> Criterios </th>
<tr>
<tr>
    <th> id </th>
    <th> nombre </th>
    <th> descripcion </th>
    <th> valor por defecto </th>
</tr>
    <% @criterias.each do |cr|%>
      <tr>   
        <td align="center">
         <%= cr['id'] %>
        </td>
        <td align="center">
        <%= cr['name'] %>
       </td>
       <td align="center">
        <%= cr['description'] %>
       </td>
       <td align="center">
       <%= cr['default_value'] %>
      </td>
       </tr>
    <% end %>

</table>



