<h2>Ingenieria de requerimientos</h2>

<%= link_to "Menu personas", "/priorization_process_persons" %>
<%= link_to "Menu alternativas", "/priorization_process_alternatives" %>

<hr>
<!--Cabecera-->
    <div class="pr-board box">
        Project <%= @project['id'] %>
    </div> 

<hr>
<!--Tabla de Priorizacion -->

<%= link_to "Nuevo proceso", new_project_priorization_process_path(@project) %>

<table>
<tr>
  <th> Procesos de Priorizacion </th>
<tr>
<tr>
    <th> id </th>
    <th> status </th>
    <th> start date </th>
    <th> updated date </th>
</tr>
    <% @pps.each do |pp|%>
      <tr>
        <td align="center">
          <%= link_to "#{'Priorization Process' + pp['id'].to_s}", priorization_process_path(pp) %>
        </td>   
        <td>
         <%= pp['status'] %>
        </td>
        <td>
         <%= pp['created_on'] %>
        </td>
        <td>
         <%= pp['updated_on'] %>
        </td>
       </tr>
    <% end %>

</table>

<hr>
<!--Tabla de Proximos lanzamientos-->
<table>
<tr>
  <th> Procesos de Proximos lanzamientos </th>
<tr>
<tr>
    <th> id </th>
    <th> status </th>
    <th> start date </th>
    <th> description </th>
</tr>
    <% @issues2.each do |issue|%>
      <tr>   
        <td align="center">
         <%= issue['id'] %>
        </td>
        <td>
         <%= issue['status_id'] %>
        </td>
        <td>
         <%= issue['start_date'] %>
        </td>
        <td>
         <%= issue['description'] %>
        </td>
       </tr>
    <% end %>

</table>