<div class="pr-board box  row justify-content-center">
        <h3> Criterios del proceso </h3>   
        <table id="criteria-table" class="table w-50 mt-10">
            <thead class="thead-light">
                <tr style="text-align: center">
                    <th> Criterio 
                      <button type="button" id="add-btn" class="text-light btn btn-info" style="margin-left: 2%; padding: 0px; height: 24px; width: 12%; border-radius: 15px;">
                        <i class="fas fa-plus" style="font-size: 9px; vertical-align: 30%;"></i>
                      </button>
                    </th>
                    <th> Descripcion </th>
                    <th> Valor por defecto </th>
                </tr>
            </thead>
                
        
            <tbody>
                <tr style="text-align: center">
                    <td> <%=  text_field_tag "criterias[][name]" %> </td>
                    <td> <%=  text_field_tag "criterias[][description]", '' , size: 50 %> </td>
                    <td> <%=  number_field_tag "criterias[][value]"  %> </td>
                    <td> <button type="button" id="delete-btn" class="btn btn-danger" style="padding-top:5px"> <i class="fas fa-times" style="vertical-align: top;font-size: 16px;"></i> </button> </td>
                </tr>
            </tbody>
        </table>
</div>


<%= javascript_tag do %>
      $("#add-btn").click(function() {
        let html = "";
        html += '<tr style="text-align: center">';
        html += '<td> <%=  text_field_tag "criterias[][name]" %> </td> '; 
        html += '<td> <%=  text_field_tag "criterias[][description]", " " , size: 50 %></td>';
        html += ' <td> <%=  number_field_tag "criterias[][value]"  %> </td> ';
        html += ' <td> <button type="button" id="delete-btn" class="btn btn-danger" style="padding-top:0px"> <i class="fas fa-times style="vertical-align: top;font-size: 16px;"></i> </button> </td></tr>';
        $('#criteria-table > tbody:last-child').append(html);
    });
<% end %>